
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
  password String
}

model Topic {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  topicTitle String
  topicDescription String
  createdAt DateTime @default(now()) @db.Timestamp
  updateAt DateTime @updatedAt @db.Timestamp
}
